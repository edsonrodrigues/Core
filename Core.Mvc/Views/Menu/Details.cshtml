@model Core.Entity.Entidades.Layout.MenuEntidade
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">

    <br />
    @using (Html.BeginForm())
    {
        <div class="row">

            <div class="col-sm-offset-1">
                <div class="row">
                    @Html.LabelFor(x => x.Nome)
                </div>
                <div class="row">
                    @Html.TextBoxFor(x => x.Nome)
                </div>

                <div class="row">
                    @Html.LabelFor(x => x.Status)
                </div>

                <div class="row">
                    @Html.DropDownListFor(x => x.Status, new[] {
                new SelectListItem() {Text = "Ativo", Value = bool.TrueString},
                new SelectListItem() {Text = "Inativo", Value = bool.FalseString}
                }, "Escolha a sua opção ")
                </div>

                <div class="row">
                    @Html.LabelFor(x => x.Descricao)
                </div>
                <div class="row">
                    @Html.TextAreaFor(x => x.Descricao)
                </div>
                <div class="row">
                    @Html.LabelFor(x => x.Url)
                </div>
                <div class="row">
                    @Html.TextAreaFor(x => x.Url)
                </div>

                <div class="row">
                    @Html.Label("Data")
                </div>
                <div class="row">
                    @Html.TextBoxFor(x => x.Dt_Criacao)

                </div>
                <div class="row">
                    <br />
                    <div class="span3">
                        <input type="button" class="btn btn-danger btn-primary" value="Voltar" onclick="location.href='@Url.Action("Index", "Menu")'" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>





