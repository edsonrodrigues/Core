<!--Criar layout para tela de login sem menu vertical-->
@{
    Layout = "~/Views/Shared/_LayoutInicial.cshtml";

}


<div class="row">
    <div class="span4"></div>

    <div class="hero-unit span4">

        <h2>Login</h2>

        <p>Já Possui Cadastro? Então faça seu login</p>
        <form action="@Url.Action("Autentica", "Autenticacao")">
            <input type="text" class="input-block-level" placeholder="E-mail" required />

            <input type="password" class="input-block-level" placeholder="Senha" required />

            <input type="submit" class="btn btn-large btn-primary" value="Fazer Login" />
            <br />
            <div class="row-fluid"> <h5>Caso não inda tenha cadastro, @Html.ActionLink("Cadastre-se", "Form", "Usuarios")</h5></div>

        </form>
    </div>

    <div class="span4"></div>
</div>

@section Scripts
    {

    <script src="~/Scripts/jquery-1.7.1.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
}